<div class="row form-container">
  <div class="col-xs-12 col-sm-12 col-md-8 col-md-offset-2">
    <h2><%= t("sessions.new.title") %></h2>

    <%= form_tag session_path, class: "form" do |f| %>
      <div class="form-group">
        <%= label_tag :email, t("sessions.new.email") %>
        <%= email_field_tag :email, params[:email], class: "form-control", autofocus: true %>
      </div>
      
      <div class="form-group">
        <%= label_tag :password, t("sessions.new.password") %>
        <%= password_field_tag :password, "", class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= check_box_tag :remember_me %> <label for="remember_me"><%= t("sessions.new.remember") %></label>
      </div>
      
      <div class="form-group">
        <%= submit_tag t("sessions.new.submit"), class: "btn btn-danger form-control" %>
      </div>
      
      <%= link_to t("sessions.new.forget"), new_password_reset_path %>
    <% end %>
  </div>
</div>
