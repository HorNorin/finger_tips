<%=
  lessons = @lessons.map do |lesson|
    {
      id: lesson.id,
      name: lesson.name,
      start_episode_slug: lesson.episodes.first.slug,
      created_at: lesson.created_at,
      updated_at: lesson.updated_at,
      episode_count: lesson.episodes.size,
      slug: lesson.slug
    }
  end
  
  {
    lessons: lessons,
    per_page: @lessons.per_page,
    current: @lessons.current_page,
    nextPage: @lessons.next_page,
    prevPage: @lessons.previous_page,
    totalPages: @lessons.total_pages
  }.to_json.html_safe
%>
