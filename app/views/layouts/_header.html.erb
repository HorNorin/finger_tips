<nav id="header" class="navbar navbar-default">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to t("header.logo"), root_path, id: "logo", class: "navbar-brand" %>
    </div>

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <%= active_link_to t("header.lessons"), lessons_path, :wrap_tag => :li %>
        <%= active_link_to t("header.series"), episodes_path, :wrap_tag => :li %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if user_logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.username %> <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to t("header.account"), account_path %></li>
              <li role="separator" class="divider"></li>
              <li><%= link_to t("header.logout"), logout_path %></li>
            </ul>
          </li>
        <% else %>
          <%= active_link_to t("header.login"), login_path, :wrap_tag => :li %>
          <%= active_link_to t("header.register"), register_path, :wrap_tag => :li %>
        <% end %>
        <% if I18n.locale == :en %>
          <li>
            <% url = request.url.include?("en") ? request.url.sub('en', 'kh') : "#{request.url}kh" %>
            <%= link_to "#{url}" do %>
              <span class="flag-icon flag-icon-kh"></span>
            <% end %>
          </li>
        <% else %>
          <li>
            <% url = request.url.include?("kh") ? request.url.sub('kh', 'en') : "#{request.url}en" %>
            <%= link_to "#{url}" do %>
              <span class="flag-icon flag-icon-us"></span>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
