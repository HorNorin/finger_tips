<% if admin_logged_in? %>
  <nav id="header" class="navbar navbar-default">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to t("header.logo"), admin_root_path, id: "logo", class: "navbar-brand" %>
      </div>

      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li class="<%= request.path.include?('lessons') ? 'active' : '' %>"><%= link_to t("header.lessons"), admin_lessons_path %></li>
          <li class="<%= request.path.include?('episodes') ? 'active' : '' %>"><%= link_to t("header.series"), admin_episodes_path %></li>
          <li class="<%= request.path.include?('users') ? 'active' : '' %>"><%= link_to t("header.users"), admin_users_path %></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= t("header.username", username: current_user.username) %> <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to t("header.logout"), admin_logout_path %></li>
              </ul>
            </li>
            <% if I18n.locale == :en %>
              <li>
                <% url = request.url.include?("en") ? request.url.sub('en', 'kh') : "#{request.url}kh" %>
                <%= link_to "#{url}" do %>
                  <span class="flag-icon flag-icon-kh"></span>
                <% end %>
              </li>
            <% else %>
              <li>
                <% url = request.url.include?("kh") ? request.url.sub('kh', 'en') : "#{request.url}en" %>
                <%= link_to "#{url}" do %>
                  <span class="flag-icon flag-icon-us"></span>
                <% end %>
              </li>
            <% end %>
        </ul>
      </div>
    </div>
  </nav>
<% end %>
