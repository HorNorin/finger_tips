<div class="col-xs-6 col-sm-6 col-md-4 card">
  <h3>
    <%= link_to episode.title, episode %>
    <span><%= episode.duration %></span>
  </h3>
  <%= link_to episode do %>
    <div style="background: -webkit-linear-gradient(top, rgba(0,0,0,0.8), rgba(0,0,0,0.8)), url(<%= image_path episode.image %>); background-size: 100% 100%;"></div>
  <% end %>
</div>
